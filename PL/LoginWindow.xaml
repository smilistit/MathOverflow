<Window x:Class="PL.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="248" Width="384" ResizeMode="NoResize">
    <Grid Height="213" Width="365">
        <Label Content="Username:" Height="28" HorizontalAlignment="Left" Margin="43,40,0,0" Name="labelUsernameLogin" VerticalAlignment="Top" />
        <Label Content="Password:" Height="28" HorizontalAlignment="Left" Margin="43,94,0,0" Name="labelPasswordLogin" VerticalAlignment="Top" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="156,42,0,0" Name="textBoxUsernameLogin" VerticalAlignment="Top" Width="120" />
        <PasswordBox Height="23" HorizontalAlignment="Left" Margin="156,94,0,0" Name="passwordBoxLogin" VerticalAlignment="Top" Width="120" />
        <Button Content="Login" Height="23" HorizontalAlignment="Left" Margin="97,159,0,0" Name="buttonLogin" VerticalAlignment="Top" Width="75" Click="buttonLogin_Click" />
        <Button Content="Cancel" Height="23" HorizontalAlignment="Left" Margin="240,159,0,0" Name="buttonCancel" VerticalAlignment="Top" Width="75" />
    </Grid>
</Window>
